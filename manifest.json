{
  "name": "BoLinks",
  "description": "Chrome extension for bolinks.io",
  "homepage_url": "https://bolinks.io",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "BoLinks"
  },
  "content_scripts": [],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "bolinks_rules",
        "enabled": true,
        "path": "bolinks_rules.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
